{
  "expo": {
    "name": "RN Playground",
    "slug": "RN-Playground",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "rnplayground",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1117"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rnplayground.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for the Camera Lab demo",
        "NSMicrophoneUsageDescription": "This app uses the microphone for the Audio Lab demo"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#0D1117"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.rnplayground.app",
      "permissions": ["android.permission.CAMERA", "android.permission.RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "root": "./src/app"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow RN Playground to access your camera"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow RN Playground to access your microphone"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
